<div>
    <div class="float-left">
        <a class="btn" href="{{ "{{ path('"~ route_name_prefix ~"') }}" }}">
            {{ "{{ 'views.recordactions.backtothelist'|trans({}, 'VaszevCrudBundle') }}" }}
        </a>
    </div>
{% if ('edit' in actions) and (not hide_edit) %}
    <div class="float-left">
        <a class="btn btn-primary" href="{{ "{{ path('"~ route_name_prefix ~"_edit', { 'id': entity.id }) }}" }}">
            {{ "{{ 'views.recordactions.edit'|trans({}, 'VaszevCrudBundle') }}" }}
        </a>
    </div>
{% endif %}
{% if ('delete' in actions) and (not hide_delete) %}
    <div class="float-left">
      {{ "{% if entity.deleted is defined and entity.deleted %}" }}
        <form action="{{ "{{ path('"~ route_name_prefix ~"_undelete', { 'id': entity.id }) }}" }}" method="post">
            <button class="btn btn-danger" type="submit">{{ "{{ 'views.recordactions.undelete'|trans({}, 'VaszevCrudBundle') }}" }}</button>
        </form>
      {{ "{% else %}" }}
        <form action="{{ "{{ path('"~ route_name_prefix ~"_delete', { 'id': entity.id }) }}" }}" method="post">
          {{ '{{ form_widget(delete_form) }}' }}
          <button class="btn btn-danger" type="submit" onclick="return confirm('{{ "{{ 'views.recordactions.confirm'|trans({}, 'VaszevCrudBundle')|escape('js') }}" }}');">{{ "{{ 'views.recordactions.delete'|trans({}, 'VaszevCrudBundle') }}" }}</button>
        </form>
      {{ "{% endif %}" }}
    </div>
{% endif %}
</div>